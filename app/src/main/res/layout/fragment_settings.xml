<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="fr.thib3113.eva.fragments.SettingsFragment"
    android:id="@+id/setting_container">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/localeip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:inputType="text"
            android:text="192.168.1.24/EVA"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="EVA locale"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_margin="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distantip"
            android:layout_below="@+id/localeip"
            android:layout_alignEnd="@+id/localeip"
            android:layout_alignRight="@+id/localeip"
            android:layout_alignStart="@+id/localeip"
            android:layout_alignLeft="@+id/localeip"
            android:inputType="text"
            android:text="myraspi.thib3113.fr/EVA"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVA Distante"
            android:id="@+id/textView2"
            android:layout_below="@+id/localeip"
            android:layout_toStartOf="@+id/distantip"
            android:layout_toLeftOf="@+id/distantip"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/textView3"
            android:layout_below="@+id/distantip"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_below="@+id/distantip"
            android:layout_alignStart="@+id/distantip"
            android:layout_alignLeft="@+id/distantip"
            android:layout_alignEnd="@+id/distantip"
            android:layout_alignRight="@+id/distantip"
            android:inputType="text"
            android:text="test"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/textView4"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_margin="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwd"
            android:layout_below="@+id/username"
            android:layout_alignStart="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignRight="@+id/username"
            android:layout_alignEnd="@+id/username"
            android:text="test"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkConfig"
            android:onClick="checkConfig"
            android:id="@+id/checkConfigButton"
            android:layout_below="@+id/passwd"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginTop="40dp" />

    </RelativeLayout>
</FrameLayout>
